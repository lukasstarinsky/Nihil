{
	"version": 6,
	"configurePresets": [
		{
			"name": "VCPKG",
			"hidden": true,
			"cacheVariables": {
				"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
			}
		},
		{
			"name": "Debug",
			"hidden": true,
			"inherits": "VCPKG",
			"binaryDir": "Build/Debug",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_EXPORT_COMPILE_COMMANDS": true,
				"CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/Bin/Debug",
				"CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/Bin/Debug"
			}
		},
		{
			"name": "Release",
			"hidden": true,
			"inherits": "VCPKG",
			"binaryDir": "Build/Release",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release",
				"CMAKE_EXPORT_COMPILE_COMMANDS": true,
				"CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/Bin/Release",
				"CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/Bin/Release"
			}
		},
		{
			"name": "Ninja-Debug",
			"description": "Debug build using Ninja",
			"generator": "Ninja",
			"inherits": "Debug"
		},
		{
			"name": "Ninja-Release",
			"description": "Release build using Ninja",
			"generator": "Ninja",
			"inherits": "Release"
		}
	]
}